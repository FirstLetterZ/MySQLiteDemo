<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <TextView
        android:text="用于保存数据内容"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <Space
            android:id="@+id/middle_space"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/tv_int"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="testInt:"
            />

        <EditText
            android:id="@+id/et_int"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/middle_space"
            android:layout_toRightOf="@+id/tv_int"
            android:inputType="number"
            android:maxLength="5"/>

        <TextView
            android:id="@+id/tv_string"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/middle_space"
            android:gravity="center"
            android:text="testString:"
            />

        <EditText
            android:id="@+id/tet_string"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_string"/>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:text="用于查找数据条件"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <Space
            android:id="@+id/middle_space2"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/tv_int2"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="testInt:"
            />

        <EditText
            android:id="@+id/et_int2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/middle_space2"
            android:layout_toRightOf="@+id/tv_int2"
            android:inputType="number"
            android:maxLength="5"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="保存"/>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="删除"/>

        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="查找"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:minHeight="100dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"/>

</LinearLayout>